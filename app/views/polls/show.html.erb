<p>
  <h3><%= @poll.question %></h3>
</p>

<p>
  <ul>
    <% @poll.answers.each_with_index do |answer, i| %>
      <li>
        <%= radio_button_tag :answer, i, false, :id => "answer_#{i}" %>
        <%= label_tag "answer_#{i}", answer %>
      </li>
    <% end %>
  </ul>
</p>

<p>
  <%= button_tag "Continue", :disabled => true, :class => 'continue' %>
</p>

<%= link_to 'Show All Polls', :polls %>
